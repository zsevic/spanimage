{
    "name": "Spanimage",
    "description": "This extension will download selected part of the page as image",
    "version": "1.0.0",
	"manifest_version":2,
	"background":{
		"scripts":["background.js"]
	},
    "content_scripts": [{
        "matches": [
        	"<all_urls>"
        ],
        "js": [
        "html2canvas.js",
        "canvas2image.js",
        "script.js"]
    }],
	"permissions": [
        "contextMenus",
        "activeTab"
    ]
}